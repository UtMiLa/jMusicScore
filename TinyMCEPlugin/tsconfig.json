{
    "compilerOptions": {
        "target": "es5",
        "sourceMap": true,
        "module": "amd",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
  "include": [
    "*.ts", 
    "scripts/typings/*/*.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "*.d.ts"
  ]
}