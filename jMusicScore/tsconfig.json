{
    "compilerOptions": {
        "target": "es5",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
  "include": [
    "jMusicScore.ts", 
    "jMusicScore.Spacing.ts", 
    "jMusicScore.Views.ts", 
    "*.ts", 
    "test/*.ts", 
    "scripts/typings/*/*.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "*.d.ts",
    "Scripts/typings/jasmine/jasmine.d.ts"
  ]
}
